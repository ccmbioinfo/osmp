{
  "extends": "@tsconfig/node16",
  "compilerOptions": {
    "moduleResolution": "node",
    // These four are not covered by strict mode
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true, // new
    "sourceMap": true, // originally false
    "removeComments": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true, // new
    "rootDir": "src",
    "outDir": "./dist",
  },
  "compileOnSave": true,
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}
